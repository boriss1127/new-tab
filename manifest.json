{
  "manifest_version": 3,
  "name": "Beautiful New Tab",
  "version": "1.0",
  "description": "A beautiful new tab page with clock, search bar, and rotating backgrounds",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "storage",
    "fileSystem",
    "fileSystem.directory",
    "fileSystem.write"
  ],
  "host_permissions": [
    "file:///*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 